        android:layout_marginTop="50sp"
        android:fontFamily="@font/poppins_black"
        android:text="Dashboard"
        android:textColor="@color/red"
        android:textSize="24sp" />


    <androidx.cardview.widget.CardView
        android:layout_below="@+id/textDashboard"
        android:id="@+id/cardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20sp"
        app:cardCornerRadius="5sp"
        app:cardElevation="10sp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="15sp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:text="Akun Sales"
                android:fontFamily="@font/poppins_bold"
                android:id="@+id/tv_textakun"
                android:textColor="@color/red"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:text="Muhammad Ali"
                android:fontFamily="@font/poppins_medium"
                android:id="@+id/tv_namaSales"
                android:textColor="@color/black"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_medium"
                android:textSize="16sp"
                android:text="SPXALI"
                android:id="@+id/tv_idSales"
                android:layout_marginTop="3sp"
                android:textColor="@color/black"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_medium"
                android:textSize="16sp"
                android:text="Kopegtel Palapa"
                android:id="@+id/tv_agencySales"
                android:layout_marginTop="3sp"
                android:textColor="@color/black"/>

        </LinearLayout>

    </androidx.cardview.widget.CardView>


<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".statusfragments.StatusPeminjamanFragment">

    <!-- TODO: Update blank fragment layout -->
    <TextView
        android:id="@+id/tv_status_peminjaman"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="15sp"
        android:layout_marginTop="25sp"
        android:layout_marginEnd="15sp"
        android:layout_marginBottom="15sp"
        android:gravity="center"
        android:text="Status Peminjaman Mobil"
        android:textSize="22sp"
        android:textStyle="bold"
        android:fontFamily="@font/poppins_bold"
        android:textColor="@color/red"/>

    <androidx.recyclerview.widget.RecyclerView

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/recycle_status_peminjaman"
        android:layout_marginTop="20sp"
        android:layout_below="@+id/tv_status_peminjaman">

    </androidx.recyclerview.widget.RecyclerView>

</RelativeLayout>